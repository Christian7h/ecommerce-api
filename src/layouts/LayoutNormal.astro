---
const { title } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-900">
    <header class="sticky top-0 bg-white shadow-md">
      <nav class="container mx-auto flex justify-between p-4">
        <ul class="flex space-x-4">
          <li><a href="/" class="hover:text-blue-600">Inicio</a></li>
          <li><a href="/carrito" class="hover:text-blue-600">Carrito</a></li>
          <li><a href="/pedidos" class="hover:text-blue-600">Mis Órdenes</a></li>
          <li><a href="/categorias" class="hover:text-blue-600">Categorías</a></li>
        </ul>
      </nav>
    </header>

    <main class="container mx-auto p-6">
      <slot />
    </main>

    <footer class="bg-gray-200 text-center p-4 mt-6">
      <p>&copy; 2025 Tienda Online</p>
    </footer>
  </body>
</html>
